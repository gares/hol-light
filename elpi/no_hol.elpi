%%% ===========================================================================
%%% Load Elpi code without HOL and ML.
%%% ===========================================================================

% TODO: Problem: why this is defined when Elpi is enbedded,
% but not in the Elpi toplevel? 
pred same_term i:A, i:A.
same_term X X.

%% ----------------------------------------------------------------------------
%% Load elpi files.
%% ----------------------------------------------------------------------------

accumulate test.
accumulate pre_hol.
accumulate elab.
accumulate infer.
accumulate verbosity.

%% ----------------------------------------------------------------------------
%% Run tests.
%% ----------------------------------------------------------------------------

shorten verbosity.{ quiet, terse, info, verbose, debug, with-verbosity }.

main :-
    with-verbosity terse pre_hol_tests,
    with-verbosity terse elab_tests,
    with-verbosity terse infer_test.
